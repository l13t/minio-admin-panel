root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
line_length = 240

[*.go]
indent_style = tab
indent_size = 4

[*.{js,json,css,yml,yaml,md,sh,env*}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[Dockerfile*]
indent_style = space
indent_size = 4

[.gitignore]
indent_style = space
indent_size = 2
